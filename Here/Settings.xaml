        <TextBlock Height="30" HorizontalAlignment="Left" Margin="12,154,0,0" Name="textBlock1" Text="Ваше имя: " VerticalAlignment="Top" />
        <TextBlock Height="30" HorizontalAlignment="Left" Margin="133,154,0,0" Name="namefb" Text="" VerticalAlignment="Top" />
    </Grid>
 
